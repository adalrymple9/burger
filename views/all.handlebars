<h2>Burgers that are devoured!</h2>
<ul>
  {{#each burgers}}

  	{{#if this.devoured}}
  		<li>
  			{{> burgers/details}}
  		</li>
  	{{/if}}
  {{/each}}
</ul>

<h2>Burgers that are not devoured!</h2>
<ul>
  {{#each burgers}}
	{{#unless this.devoured}}

  		<li>
  			{{> burgers/details}}
  		</li>
  	{{/unless}}
  {{/each}}
</ul>